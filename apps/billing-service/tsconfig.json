{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["./*"],
      "@utils/*": ["./src/utils/*"]
    },
  },
  "include": ["types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}